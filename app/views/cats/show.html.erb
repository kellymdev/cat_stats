<h2><%= @cat.pet_name %></h2>

<p><%= @cat.coat_colour.colour %> <%= @cat.breed.breed_name %></p>

<% if @cat.has_title? %>
  <p>Title: <%= @cat.title.title %></p>
<% end %>

<% if @cat.registered? %>
  <p>Registered Name: <%= @cat.registered_name %></p>
  <p>Registration Number: <%= @cat.registration_number %></p>
<% end %>

<p>Date of Birth: <%= @cat.date_of_birth %></p>

<% if @cat.deceased? %>
  <p>Date of Death: <%= @cat.date_of_death %></p>
<% end %>